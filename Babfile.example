# Basic task
hello:
  desc: Simple greeting
  run: echo "Hello, World!"

# Task without description
goodbye:
  run: echo "Goodbye!"

# Multi-command task
setup:
  desc: Setup environment
  run:
    - echo "Step 1"
    - echo "Step 2"
    - echo "Step 3"

# Multi-line command
deploy:
  desc: Deploy application
  run: |
    echo "Starting deployment"
    echo "Uploading files"
    echo "Deployment complete"

# Nested tasks
dev:
  start:
    desc: Start dev server
    run: echo "Server started"

  stop:
    desc: Stop dev server
    run: echo "Server stopped"

test:
  unit:
    desc: Run unit tests
    run: echo "Unit tests passed"

  integration:
    desc: Run integration tests
    run: echo "Integration tests passed"

# Deep nesting
docker:
  build:
    dev:
      desc: Build dev image
      run: echo "Building dev image"

    prod:
      desc: Build prod image
      run: echo "Building prod image"

# Task dependencies
install:
  desc: Install dependencies
  run: echo "Installing dependencies"

lint:
  desc: Lint code
  deps: install
  run: echo "Linting code"

build:
  desc: Build application
  deps: [install, lint]
  run: echo "Building application"

release:
  desc: Create release
  deps: [build, test:unit]
  run: echo "Creating release"
