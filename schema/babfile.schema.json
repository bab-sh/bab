{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bab.sh/schema/babfile.json",
  "$ref": "#/$defs/Schema",
  "$defs": {
    "Include": {
      "properties": {
        "babfile": {
          "type": "string",
          "description": "Relative or absolute path to the babfile to include"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "babfile"
      ]
    },
    "Schema": {
      "properties": {
        "includes": {
          "additionalProperties": {
            "$ref": "#/$defs/Include"
          },
          "type": "object",
          "description": "External babfile imports with namespace prefixes"
        },
        "tasks": {
          "additionalProperties": {
            "$ref": "#/$defs/Task"
          },
          "type": "object",
          "description": "Task definitions"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "tasks"
      ]
    },
    "Task": {
      "properties": {
        "desc": {
          "type": "string",
          "description": "Human-readable description of the task"
        },
        "deps": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Task dependencies to run before this task"
        },
        "run": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "cmd": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Shell command to execute"
                  },
                  "platforms": {
                    "items": {
                      "type": "string",
                      "enum": [
                        "linux",
                        "darwin",
                        "windows"
                      ]
                    },
                    "type": "array",
                    "description": "Platforms to run on (if empty runs on all platforms)"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "cmd"
                ]
              },
              {
                "properties": {
                  "task": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Task name to execute"
                  },
                  "platforms": {
                    "items": {
                      "type": "string",
                      "enum": [
                        "linux",
                        "darwin",
                        "windows"
                      ]
                    },
                    "type": "array",
                    "description": "Platforms to run on (if empty runs on all platforms)"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "task"
                ]
              }
            ]
          },
          "type": "array",
          "description": "List of run items to execute"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  },
  "title": "Babfile Schema",
  "description": "Schema for Babfile task runner configuration (https://bab.sh)"
}
